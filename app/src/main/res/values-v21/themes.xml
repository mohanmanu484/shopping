<resources>

    <style name="ZeloRoot.Theme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.Zelo.Base" parent="ZeloRoot.Theme">
        <item name="colorControlHighlight">@color/ripple_color</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_window_background_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:datePickerDialogTheme">@style/DialogTheme</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="android:windowContentTransitions">true</item>

        <!--control normal active -->
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/ripple_color</item>

        <!--<item name="colorControlHighlight">@color/colorAccent</item>-->
    </style>

    <style name="DialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorPrimary</item>

    </style>

    <style name="DatePickerStyle">

    </style>

</resources>
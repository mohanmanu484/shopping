<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme.Overlay" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="RaisedButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/btn_raised</item>
        <item name="typeFace">@string/karla_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:textAppearance">@style/Caption</item>
        <item name="typeFace">@string/karla_bold</item>
        <item name="android:letterSpacing">1.2</item>
        <item name="android:textColorHint">@color/txt_blue</item>
        <item name="errorTextAppearance">@style/TextInputLayout.Error</item>
        <item name="hintTextAppearance">@style/TextInputLayout.Hint</item>
    </style>

    <style name="TextInputLayoutPrimary">
        <item name="android:textAppearance">@style/Caption</item>
        <item name="typeFace">@string/karla_bold</item>
        <item name="android:letterSpacing">1.2</item>
        <item name="android:textColorHint">@color/txt_yellow</item>
        <item name="errorTextAppearance">@style/TextInputLayout.Error</item>
        <item name="hintTextAppearance">@style/TextInputLayout.Hint.Primary</item>
    </style>



    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>


</resources>